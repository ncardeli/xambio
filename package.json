{
  "name": "xambio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^5.2.0",
    "firebase": "^8.2.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-firebaseui": "^4.1.0",
    "react-loading-skeleton": "^2.2.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-router-transition": "^2.1.0",
    "react-scripts": "^3.4.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "source-map-explorer": "^2.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "cross-env": "^7.0.3",
    "postcss-cli": "^7.1.1",
    "redux-mock-store": "^1.5.4",
    "tailwindcss": "^1.4.6"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "concurrently \"yarn run watch:css\" \"react-scripts start\"",
    "build": "yarn run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "yarn run build && firebase deploy --only hosting",
    "build:css": "postcss ./src/assets/tailwind.css -o ./src/assets/main.css",
    "watch:css": "yarn run build:css -- --watch",
    "ci": "cross-env CI=true && yarn run ci:react && yarn run ci:functions",
    "ci:react": "yarn test",
    "ci:functions": "cd functions/ && yarn run build && yarn test",
    "precommit": "yarn run ci"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ncardeli/xambio.git"
  },
  "author": "ncardeli",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ncardeli/xambio/issues"
  }
}
